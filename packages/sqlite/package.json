{
  "name": "@quory/sqlite",
  "version": "0.2.1",
  "description": "SQLite driver for Quory",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "CNimmo16",
  "license": "MIT",
  "scripts": {
    "test": "jest --runInBand",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "build:watch": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint ."
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@quory/core": "workspace:*",
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "@quory/config": "workspace:*"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "knex": "^2.3.0",
    "testcontainers": "^8.14.0"
  }
}