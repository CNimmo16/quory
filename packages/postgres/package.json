{
  "name": "@quory/postgres",
  "version": "0.1.0",
  "description": "Postgres driver for Quory",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "author": "CNimmo16",
  "license": "MIT",
  "scripts": {
    "test": "export DOCKER_HOST=unix:///home/cameron/.docker/desktop/docker.sock && jest --runInBand",
    "test:watch": "jest --watch",
    "test:debug": "DEBUG=testcontainers* jest --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "build:watch": "tsup src/index.ts --format cjs,esm --dts --watch"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@quory/core": "*",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "@types/jest": "^29.5.14"
  },
  "dependencies": {
    "knex": "^2.3.0",
    "pg": "^8.10.0",
    "testcontainers": "^8.14.0"
  }
}
