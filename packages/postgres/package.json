{
  "name": "@quory/postgres",
  "version": "1.0.5",
  "description": "Postgres driver for Quory",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "CNimmo16",
  "license": "MIT",
  "scripts": {
    "test": "export DOCKER_HOST=unix:///home/cameron/.docker/desktop/docker.sock && jest --runInBand",
    "test:debug": "DEBUG=testcontainers* jest --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "build:watch": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint ."
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@quory/config": "workspace:*",
    "@quory/core": "workspace:*",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "knex": "^2.3.0",
    "pg": "^8.13.1",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5"
  },
  "dependencies": {
    "postgres": "^3.4.5",
    "testcontainers": "^8.14.0"
  }
}
