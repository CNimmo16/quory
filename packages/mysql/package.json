{
  "name": "@quory/mysql",
  "version": "1.0.1",
  "description": "MySQL driver for Quory",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "author": "CNimmo16",
  "license": "MIT",
  "scripts": {
    "test": "export DOCKER_HOST=unix:///home/cameron/.docker/desktop/docker.sock && jest --runInBand",
    "test:watch": "jest --watch",
    "test:debug": "DEBUG=testcontainers* jest --watch",
    "build": "tsup src/index.ts --format cjs,esm --experimental-dts",
    "build:watch": "tsup src/index.ts --format cjs,esm --experimental-dts --watch",
    "lint": "eslint ."
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.48.1",
    "@quory/config": "workspace:*",
    "@quory/core": "workspace:*",
    "@types/jest": "^29.5.14",
    "knex": "^2.3.0",
    "testcontainers": "^8.14.0",
    "tsup": "^8.3.5"
  },
  "dependencies": {
    "@types/lodash": "^4.17.14",
    "lodash": "^4.17.21",
    "mysql2": "^3.2.0"
  }
}